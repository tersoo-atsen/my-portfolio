{
  "kind": "collectionType",
  "collectionName": "leads",
  "info": {
    "singularName": "lead",
    "pluralName": "leads",
    "displayName": "Lead"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "string",
      "maxLength": 254,
      "required": true,
      "unique": true
    },
    "message": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "leadStatus": {
      "type": "enumeration",
      "private": true,
      "required": true,
      "default": "New",
      "enum": [
        "New",
        "In Progress",
        "Closed"
      ]
    },
    "consent": {
      "type": "boolean",
      "private": true,
      "required": true,
      "default": false
    }
  }
}
